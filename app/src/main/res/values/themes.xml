<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme with ActionBar -->
    <style name="Theme.Listi" parent="Theme.Material3.DayNight">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>

        <!-- Background and Surface colors -->
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorOnBackground">@color/colorOnBackground</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>

        <!-- Error Colors -->
        <item name="colorError">@color/colorError</item>
        <item name="colorOnError">@color/colorOnError</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>

        <!-- Customize your theme here -->
        <item name="android:fontFamily">@font/app_font</item>
        <item name="fontFamily">@font/app_font</item>
        <item name="textAppearanceBody1">@style/TextAppearance.App.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.App.Body2</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.App.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.App.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.App.Subtitle2</item>
        <item name="textAppearanceButton">@style/TextAppearance.App.Button</item>
    </style>

    <style name="TextAppearance.App.Body1" parent="TextAppearance.Material3.BodyLarge">
        <item name="fontFamily">@font/app_font</item>
        <item name="android:fontFamily">@font/app_font</item>
    </style>

    <style name="TextAppearance.App.Body2" parent="TextAppearance.Material3.BodyMedium">
        <item name="fontFamily">@font/app_font</item>
        <item name="android:fontFamily">@font/app_font</item>
    </style>

    <style name="TextAppearance.App.Headline6" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="fontFamily">@font/app_font</item>
        <item name="android:fontFamily">@font/app_font</item>
    </style>

    <style name="TextAppearance.App.Subtitle1" parent="TextAppearance.Material3.TitleMedium">
        <item name="fontFamily">@font/app_font</item>
        <item name="android:fontFamily">@font/app_font</item>
    </style>

    <style name="TextAppearance.App.Subtitle2" parent="TextAppearance.Material3.TitleSmall">
        <item name="fontFamily">@font/app_font</item>
        <item name="android:fontFamily">@font/app_font</item>
    </style>

    <style name="TextAppearance.App.Button" parent="TextAppearance.Material3.LabelLarge">
        <item name="fontFamily">@font/app_font</item>
        <item name="android:fontFamily">@font/app_font</item>
    </style>

    <!-- In styles.xml -->
    <style name="NavigationDrawerText" parent="@style/TextAppearance.Material3.BodyMedium">
        <item name="fontFamily">@font/app_font</item>
        <item name="android:fontFamily">@font/app_font</item>
        <item name="android:textColorHighlight">@color/colorPrimary</item>
    </style>

    <!-- Add this to your styles.xml -->
    <style name="CustomNavigationViewStyle" parent="Widget.Material3.NavigationView">
        <!-- Set the color for the selected item -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>

        <!-- Set the color for unselected items -->
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>

        <!-- Apply the colors to the NavigationView items -->
        <item name="itemIconTint">@drawable/nav_item_icon_tint</item>
        <item name="itemTextColor">@drawable/nav_item_text_tint</item>
    </style>

    <style name="CustomNavigationViewStyle.Colour2" parent="Widget.Material3.NavigationView">
        <!-- Set the color for the selected item -->
        <item name="colorPrimary">@color/colorPrimary_2</item>
        <item name="colorOnPrimary">@color/colorOnPrimary_2</item>
        <item name="colorSurface">@color/colorSurface_2</item>


    </style>

    <style name="Theme.Listi.NoActionBar" parent="Theme.Listi">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Listi.AppBarOverlay" parent="ThemeOverlay.Material3.Dark.ActionBar" />
    <style name="Theme.Listi.PopupOverlay" parent="ThemeOverlay.Material3.Light" />

    <!-- OpenDyslexic Theme -->
