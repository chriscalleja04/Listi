        <item name="textAppearanceSubtitle2">@style/TextAppearance.App.OpenDyslexic.Subtitle2</item>
        <item name="textAppearanceButton">@style/TextAppearance.App.OpenDyslexic.Button</item>
    </style>

    <style name="TextAppearance.App.OpenDyslexic.Body1" parent="TextAppearance.Material3.BodyLarge">
        <item name="fontFamily">@font/open_dyslexic</item>
        <item name="android:fontFamily">@font/open_dyslexic</item>
        <item name="android:includeFontPadding">false</item>
